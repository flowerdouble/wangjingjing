<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="Top">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="EditText">
        <item name="android:focusable">false</item>
        <item name="android:hint">搜索一下</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingLeft">8dip</item>
        <item name="android:paddingRight">8dip</item>
        <item name="android:layout_height">34dip</item>
        <item name="android:layout_marginTop">8dip</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginBottom">8dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:textColorHint">@color/greySub</item>
        <item name="android:drawableRight">@mipmap/ic_edit_search</item>
        <item name="android:background">@drawable/bg_edit_text_search</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <style name="Button">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="LogGeren">
        <item name="android:button">@null</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>


    </style>
    <style name="LogGeren1">
        <item name="android:button">@null</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="WEIGHT">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
